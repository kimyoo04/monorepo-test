{
    "compilerOptions": {
        "module": "esnext", // the output module resolution system
        "moduleResolution": "node", // how the compiler tries to resolve modules
        "target": "es6", // target language
        "lib": ["esnext"], // which language features are available
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "suppressImplicitAnyIndexErrors": true,
        "ignoreDeprecations": "5.0",
        "noEmit": true,
        "jsx": "react-jsx"
    }
}
